@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Net Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@700&display=swap" rel="stylesheet">
    <style>
        .myfont {
            font-family: 'Oswald', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link myfont text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link myfont text-dark" asp-area="" asp-controller="Stories" asp-action="Index">Stories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link myfont text-dark" asp-area="" asp-controller="Testimonials" asp-action="Index">Testimonials</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link myfont text-dark" asp-area="" asp-controller="Quotes" asp-action="Index">Quotes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link myfont text-dark" asp-area="" asp-controller="Careers" asp-action="Index">Careers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link myfont text-dark" asp-area="Identity" asp-page="/Account/RegisterAdmin">New Admin</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link myfont text-dark" asp-area="" asp-controller="Home" asp-action="Apply">Careers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link myfont text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-dark text-white p-3">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2>About Us</h2>
                    <p>Net Solutions is a strategic design & build consultancy that unites creative design thinking with agile software development under one expert roof. Founded in 2000, we create award-winning transformative digital products & platforms for startups and enterprises worldwide.</p>
                </div>
                <div class="col-md-4">
                    <h4>Industries</h4>
                    <p>Retail and Ecommerce</p>
                    <p>Sports and Fitness</p>
                    <p>Media, Publishing & Entertainment</p>
                    <p>Education and Training</p>
                    <p>Food and Beverage</p>
                    <p>Healthcare</p>
                    <p>Automotive</p>
                </div>
                <div class="col-md-4">
                    <h4>Services</h4>
                    <p>Experience Design</p>
                    <p>Digital Commerce</p>
                    <p>Product Development</p>
                    <p>Digital Experience Platform</p>
                    <p>Data Analytics</p>
                    <p>Digital Transformation</p>
                </div>
            </div>
            <p>Copyright &copy; 2021 - Net Solutions</p>
        </div>        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
