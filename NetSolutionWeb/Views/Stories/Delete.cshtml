@model NetSolutionWeb.Models.Story

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 myfont">Delete Story</h1>
</div>
<hr />
<div>
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExtName)
        </dt>
        <dd class="col-sm-10">
            <img src="~/stories/@Model.StoryID@Model.ExtName" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TagLine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TagLine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Industry)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Features)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Features)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StoryID" />
        <input type="submit" value="Delete Story" class="btn btn-danger" /> 
    </form>
</div>
